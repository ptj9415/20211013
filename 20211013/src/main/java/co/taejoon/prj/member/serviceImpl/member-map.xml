<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="co.taejoon.prj.member.service.MemberMapper">
	<select id="memberSelectList"
		resultType="co.taejoon.prj.member.service.MemberVO">
		select * from member
	</select>

	<select id="memberSelect"
		parameterType="co.taejoon.prj.member.service.MemberVO"
		resultType="co.taejoon.prj.member.service.MemberVO">
		select * from member where id = #{id}
	</select>

	<select id="loginCheck"
		parameterType="co.taejoon.prj.member.service.MemberVO"
		resultType="co.taejoon.prj.member.service.MemberVO">
		select name, author from member where id = #{id} and password = #{password}
	</select>

	<insert id="memberInsert"
		parameterType="co.taejoon.prj.member.service.MemberVO">
		insert into member(id, name, password, tel, address)
		values(#{id}, #{name}, #{password}, #{tel}, #{address})
	</insert>

	<update id="memberUpdate"
		parameterType="co.taejoon.prj.member.service.MemberVO">
		update member set name = #{name}, password =
		#{password}, tel = #{tel}, address = #{address}, author = #{author}
		where id = #{id}
	</update>

	<delete id="memberDelete"
		parameterType="co.taejoon.prj.member.service.MemberVO">
		delete from member where id = #{id}
	</delete>
</mapper>